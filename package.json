{
  "name": "domql",
  "description": "DOM rendering Javascript framework at early stage.",
  "author": "symbo.ls",
  "version": "1.5.84",
  "repository": "https://github.com/domql/domql",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "source": "src/index.js",
  "main": "src/index.js",
  "files": [
    "dist",
    "src",
    "packages"
  ],
  "scripts": {
    "prepublish": "rm -rf dist && npx esbuild src/index.js --target=es2020 --format=cjs --bundle --sourcemap=external --outfile=dist/index.cjs.js",
    "start": "parcel examples/index.html --no-cache",
    "build": "parcel build examples/index.html",
    "standard": "npx standard \"src/**/*.js\"",
    "test": "yarn standard; jest --coverage --coverageReporters=text-lcov | coveralls",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "@domql/globals": "latest",
    "@domql/utils": "latest"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/preset-env": "^7.16.4",
    "@emotion/css": "^11.10.0",
    "@parcel/babel-preset-env": "^2.8.3",
    "babel-jest": "^29.3.1",
    "coveralls": "^3.1.1",
    "esbuild": "^0.15.5",
    "eslint": "^8.4.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.3.1",
    "jsdom": "^19.0.0",
    "nodemon": "^2.0.6",
    "parcel": "^2.0.1",
    "standard": "^16.0.1"
  },
  "babel": {
    "presets": [
      [
        "@parcel/babel-preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "browserslist": [
    "> 1%",
    "ie >= 9"
  ]
}
