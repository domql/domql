{
  "name": "domql",
  "description": "DOM rendering Javascript framework at early stage.",
  "private": false,
  "author": "rackai",
  "version": "1.4.20",
  "repository": "https://github.com/rackai/domql",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "main": "src/index.js",
  "files": [
    "src",
    "packages"
  ],
  "scripts": {
    "start": "parcel examples/index.html --no-cache",
    "build": "parcel build examples/index.html",
    "standard": "npx standard \"src/**/*.js\"",
    "test": "yarn standard && jest --coverage --coverageReporters=text-lcov | coveralls",
    "test-watch": "jest --watch",
    "bump": "npx np"
  },
  "source": true,
  "dependencies": {
    "regenerator-runtime": "^0.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/preset-env": "^7.16.4",
    "@emotion/css": "^11.10.0",
    "@parcel/babel-preset-env": "^2.0.1",
    "babel-jest": "^28.1.3",
    "esbuild": "^0.15.3",
    "eslint": "^8.4.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.4.4",
    "jsdom": "^19.0.0",
    "nodemon": "^2.0.6",
    "np": "^7.2.0",
    "parcel": "^2.0.1",
    "standard": "^16.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "jest"
    ]
  },
  "browserslist": [
    "> 1%",
    "ie >= 9"
  ]
}
