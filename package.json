{
  "private": true,
  "repository": "https://github.com/domql/domql",
  "scripts": {
    "start": "parcel examples/index.html --no-cache --port 1200",
    "build": "lerna run build",
    "build:domql": "parcel build packages/all/index.js && esbuild packages/all/index.js --bundle --format=cjs --outfile=packages/all/dist/module.bundle.cjs.js && esbuild packages/all/allExports.js --bundle --format=cjs --outfile=packages/all/dist/exports.js",
    "build:cjs": "esbuild packages/all/index.js --bundle --format=cjs --outfile=packages/all/dist/module.bundle.cjs.js && esbuild packages/all/allExports.js --bundle --format=cjs --outfile=packages/all/dist/exports.js",
    "build:watch": "nodemon --exec \"yarn build:cjs\" --ignore 'dist/*'",
    "build:all": "lerna exec -- npx parcel build index.js",
    "test:watch": "jest 'packages/**/*.js' --watch --env=jsdom",
    "test:unit": "jest 'packages/**/*.js' --env=jsdom",
    "test:lint": "npx standard \"packages/**/*.js\"",
    "test:build": "echo test how it builds is not yet supported",
    "test:coverage": "yarn jest --coverage --coverageReporters=text-lcov | coveralls",
    "test": "yarn jest --coverage --coverageReporters=text-lcov | coveralls",
    "push": "echo push is not yet supported",
    "push:version": "git add . && git commit -am 'version update' && git push",
    "clean": "rm -rf dist node_modules yarn.lock .parcel-cache yarn-error.log",
    "clean:all": "lerna exec -- rm -rf dist node_modules yarn.lock .parcel-cache yarn-error.log"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/preset-env": "^7.16.4",
    "@parcel/babel-preset-env": "^2.7.0",
    "babel-jest": "^29.2.1",
    "esbuild": "^0.15.7",
    "eslint": "^8.4.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.0.2",
    "jsdom": "^20.0.1",
    "lerna": "^6.0.1",
    "nodemon": "^2.0.6",
    "np": "^7.2.0",
    "parcel": "^2.0.1",
    "standard": "^16.0.1"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "env": [
      "jest"
    ]
  },
  "babel": {},
  "browserslist": "> 0.25%, not dead",
  "version": "0.0.3"
}
